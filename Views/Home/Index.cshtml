@{
    ViewData["Title"] = "Home Page";
}
@model Lizard

<form CLASS="col-5 mx-auto" action="/process" method="post">
<h1>Add A Lizard:</h1>
<div class="form-group">
    <label asp-for="Name">Name:</label>
    <input asp-for="Name" class="form-control">
    <span class="text-danger" asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label asp-for="LizardType">Lizard Type:</label>
    <input asp-for="LizardType" class="form-control">
    <span class="text-danger" asp-validation-for="LizardType"></span>
</div>

<div class="form-group">
    <label asp-for="PirateRole">Pirate Role:</label>
    <input asp-for="PirateRole" class="form-control">
    <span class="text-danger" asp-validation-for="PirateRole"></span>
</div>

<div class="form-group">
    <label asp-for="TreasureChests"># of Treasures:</label>
    <input asp-for="TreasureChests" class="form-control">
    <span class="text-danger" asp-validation-for="TreasureChests"></span>
</div>
<input type="submit" value="ARRRGH" class="btn btn-primary">
</form>